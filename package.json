{
	"name": "@acdh-oeaw/app",
	"private": true,
	"license": "MIT",
	"type": "module",
	"engines": {
		"node": "20.x",
		"pnpm": "8.x"
	},
	"packageManager": "pnpm@8.6.7",
	"scripts": {
		"analyze": "nuxt analyze",
		"build": "nuxt build --dotenv ./.env.local",
		"dev": "nuxt dev --dotenv ./.env.local",
		"format:check": "prettier . --cache --check --ignore-path ./.gitignore",
		"format:fix": "pnpm run format:check --write",
		"lint:check": "run-p --continue-on-error \"lint:*:check\"",
		"lint:fix": "run-p --continue-on-error \"lint:*:fix\"",
		"lint:code:check": "eslint . --cache --ext .js,.ts,.vue --ignore-path ./.gitignore",
		"lint:code:fix": "pnpm run lint:code:check --fix",
		"lint:styles:check": "stylelint \"./**/*.@(css|vue)\" --cache --ignore-path ./.gitignore",
		"lint:styles:fix": "pnpm run lint:styles:check --fix",
		"postinstall": "nuxt prepare && pnpm run generate:api-client",
		"prepare": "run-s setup",
		"setup": "simple-git-hooks || exit 0",
		"start": "nuxt preview",
		"test": "exit 0",
		"test:e2e": "playwright test",
		"test:e2e:codegen": "playwright codegen",
		"test:e2e:debug": "playwright test --debug",
		"test:e2e:ui": "playwright test --ui",
		"types:check": "vue-tsc --noEmit",
		"validate": "run-p format:check lint:check types:check",
		"full-validate": "run-p format:check lint:check types:check test test:e2e",
		"validate-without-tests": "run-p format:fix lint:check types:check",
		"playwright:install": "npx playwright install",
		"generate:api-client": "swagger-typescript-api --path ./public/noske.json --clean-output --name index.ts --output ./lib/api-client/"
	},
	"dependencies": {
		"@acdh-oeaw/lib": "^0.1.7",
		"@mdi/font": "^7.4.47",
		"@nuxt/content": "^2.11.0",
		"@nuxtjs/i18n": "^8.0.0",
		"@pinia/nuxt": "^0.5.1",
		"@radix-icons/vue": "^1.0.0",
		"@tanstack/vue-query": "^5.51.4",
		"@vueuse/core": "^10.11.0",
		"class-variance-authority": "^0.7.0",
		"clsx": "^2.1.1",
		"html-to-text": "^9.0.5",
		"lucide-vue-next": "^0.427.0",
		"nanoid": "^5.0.7",
		"pinia": "^2.1.7",
		"polygon-utils": "^1.1.0",
		"radix-vue": "^1.9.1",
		"sweetalert2": "^11.10.4",
		"tailwind-merge": "^2.4.0",
		"vue-highlight-words": "^3.0.1",
		"vue-i18n-routing": "^1.2.0",
		"vue-json-viewer": "^3.0.4",
		"zipcelx": "^1.6.2"
	},
	"devDependencies": {
		"@acdh-oeaw/eslint-config": "^1.0.5",
		"@acdh-oeaw/eslint-config-nuxt": "^1.0.11",
		"@acdh-oeaw/eslint-config-vue": "^1.0.10",
		"@acdh-oeaw/prettier-config": "^1.0.1",
		"@acdh-oeaw/stylelint-config": "^1.0.7",
		"@acdh-oeaw/tsconfig": "^1.0.2",
		"@axe-core/playwright": "^4.8.4",
		"@fontsource-variable/inter": "^5.0.16",
		"@hey-api/openapi-ts": "^0.34.5",
		"@highcharts/map-collection": "^2.1.0",
		"@nuxt/devtools": "^0.6.7",
		"@pinia-plugin-persistedstate/nuxt": "^1.2.0",
		"@playwright/test": "^1.41.1",
		"@tailwindcss/typography": "^0.5.10",
		"@tanstack/vue-table": "^8.19.3",
		"@types/html-to-text": "^9.0.4",
		"@types/node": "^20.11.10",
		"autoprefixer": "^10.4.17",
		"eslint": "^8.56.0",
		"eslint-plugin-tailwindcss": "^3.14.1",
		"highcharts": "^11.3.0",
		"highcharts-vue": "^1.4.3",
		"jsdom": "^22.1.0",
		"lint-staged": "^14.0.1",
		"npm-run-all2": "^6.1.1",
		"nuxt": "^3.9.3",
		"nuxt-vitest": "^0.8.7",
		"postcss": "^8.4.33",
		"postcss-nesting": "^12.0.2",
		"prettier": "^3.3.3",
		"sass": "^1.70.0",
		"schema-dts": "^1.1.2",
		"shadcn-nuxt": "^0.10.4",
		"simple-git-hooks": "^2.9.0",
		"stylelint": "^15.11.0",
		"swagger-typescript-api": "^13.0.13",
		"tailwindcss": "^3.4.1",
		"tailwindcss-animate": "^1.0.7",
		"typescript": "^5.5.3",
		"vue-tsc": "^2.0.29",
		"vuetify": "^3.5.1"
	},
	"browserslist": {
		"development": [
			"last 1 chrome version",
			"last 1 firefox version",
			"last 1 safari version"
		],
		"production": [
			">=0.75%",
			"not dead",
			"not op_mini all"
		]
	},
	"eslintConfig": {
		"extends": [
			"@acdh-oeaw/eslint-config",
			"@acdh-oeaw/eslint-config-vue",
			"@acdh-oeaw/eslint-config-nuxt",
			"plugin:eslint-plugin-tailwindcss/recommended"
		],
		"rules": {
			"@typescript-eslint/ban-ts-comment": "off",
			"require-atomic-updates": "off"
		}
	},
	"lint-staged": {
		"*.@(vue)": [
			"eslint --cache --fix",
			"stylelint --cache --fix",
			"prettier --cache --write"
		],
		"*.@(js|ts)": [
			"eslint --cache --fix",
			"prettier --cache --write"
		],
		"*.@(css)": [
			"stylelint --cache --fix",
			"prettier --cache --write"
		],
		"*.!(css|js|ts|vue)": "prettier --cache --ignore-unknown --write"
	},
	"postcss": {
		"plugins": {
			"tailwindcss/nesting": "postcss-nesting",
			"tailwindcss": {},
			"autoprefixer": {}
		}
	},
	"prettier": "@acdh-oeaw/prettier-config",
	"simple-git-hooks": {},
	"stylelint": {
		"extends": "@acdh-oeaw/stylelint-config"
	}
}
